<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="character"
            type="com.bergamin.marvelcharacters.feature.home.viewmodel.CharacterItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/character_picture"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:src="@{character.pictureUrl}" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/character_picture"
            app:layout_constraintStart_toStartOf="@id/character_picture"
            app:layout_constraintEnd_toEndOf="@id/character_picture"
            android:text="@{character.name}"
            tools:text="Character's Name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
